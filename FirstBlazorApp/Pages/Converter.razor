@page "/converter"

<PageTitle>@title</PageTitle>
<h3>Converter</h3>

<label>Kilograms</label>
<input type="number" @bind-value="@Kilos" @bind-value:event="oninput" />
<span> = </span>
<input type="number" @bind-value="@Grams" @bind-value:event="oninput" />
<label>Grams</label>

<br/>
<br />

<label>Pounds</label>
<input type="number" @bind-value="@Pounds" @bind-value:event="oninput" />
<span> = </span>
<input type="number" @bind-value="Ounces" @bind-value:event="oninput" />
<label>Ounces</label>

@code {
    private string title = "Converter";

    private double kilos = 1;
    private double grams = 1000;
    private double pounds = 1;
    private double ounces = 16;

    public double Kilos
    {
        get => kilos;
        set {
            grams = value * 1000;
            kilos = value;
        }
    }

    public double Grams
    {
        get => grams;
        set
        {
            kilos = value / 1000;
            grams = value;
        }
    }

    public double Pounds
    {
        get => pounds;
        set
        {
            ounces = value * 16;
            pounds = value;
        }
    }

    public double Ounces
    {
        get => ounces;
        set
        {
            pounds = value / 16;
            ounces = value;
        }
    }
}